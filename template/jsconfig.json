{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "static/*": [
        "src/static/*"
      ],
      "routes/*": [
        "src/routes/*"
      ],
      "store": [
        "src/store.js"
      ],
      "app": [
        "src/app.js"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}